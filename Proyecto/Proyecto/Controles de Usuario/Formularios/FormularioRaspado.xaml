<UserControl x:Class="Proyecto.Controles_de_Usuario.Formularios.FormularioRaspado"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Proyecto.Controles_de_Usuario.Formularios"
             mc:Ignorable="d" 
             >
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Margin="10,10,10,0"
                       Text="Consulta XPath:" />
            <TextBox Margin="10,10,10,10"
                     HorizontalAlignment="Left"
                     TextWrapping="Wrap"
                     MinLines="2"
                     MinHeight="100"
                     MinWidth="300"
                     MaxWidth="240"
                     MaxHeight="140"
                     VerticalScrollBarVisibility="Auto"
                     AcceptsReturn="True"
                     AcceptsTab="True" 
                     Name="TextBoxConsultaXPath"/>
            <Button Content="Ejecutar Consulta" Height="auto" Width="110" HorizontalAlignment="Left"  Margin="10,0,10,10"/>
        </StackPanel>
    </Grid>
</UserControl>
